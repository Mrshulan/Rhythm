/* 样式的载入 */
@import "/template/song/song.wxss";
@import "/template/public/bottom-player.wxss";

/* header头部 */
.header{
  display: flex;
  justify-content: center;
  padding-bottom: 10px;
  background: #b3d4db;
  color: #fff;
}
.header navigator{
  margin: 0 5px;
  padding: 0 10px 8px;
}
.header navigator.on{
  background: linear-gradient(#fff,#fff) no-repeat center bottom/ 90% 2px;
}

/* banner */
.home-banner{
  background: linear-gradient(#b3d4db,#b3d4db)
               no-repeat left top/ 100% 300rpx;
}
.home-banner swiper{
  height: 300rpx;
}
.home-banner swiper-item{
  box-sizing: border-box;
  padding: 0 10px;
}
.home-banner image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

/* 国家地区 */
.region-type{
  border-bottom: 1px solid #efefef;
}
.region-type .region-type-title{
  width: 100%;
  padding: 10px 0px;
  color: #b3d4db;
  font-weight: 700;
  text-align: center;
}
.region-type .region-type-content {
  display: flex;
  justify-content: space-around;
  width: 100%;
}
.region-type navigator image{
  width: 80rpx;
  height: 80rpx;
}
.region-type navigator text{
  display: block;
  color: #b3d4db;
  text-align: center;
}

/* 歌曲分类 */
.home-menu{
  margin-top: 25px;
}
.hmenu-item + .hmenu-item{
  margin-top: 15px;
}
.hmenu-head{
  padding-bottom: 10px;
}
.hmenu-head image{
  width: 35px;
  height: 35px;
  vertical-align: bottom;
}
.hmenu-head text{
  vertical-align: bottom;
}

/* 歌曲图标样式 */
.hmenu-body{
  padding: 0 10px;
}
